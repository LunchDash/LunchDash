<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lunchdash.lunchdash.activities.ContactActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivUserImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/com_facebook_blue"
                tools:image="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tvContactText"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/ivUserImage"
                android:layout_toRightOf="@+id/ivUserImage"
                android:gravity="center_horizontal"
                android:textIsSelectable="true"
                android:textSize="20sp"
                tools:text="'Name' is ready for an awesome lunch!\nGet in touch with him/her!" />

        </RelativeLayout>

        <ListView
            android:id="@+id/lvChat"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:transcriptMode="alwaysScroll" />


        <RelativeLayout
            android:id="@+id/llSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lvChat">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/btSend"
                android:layout_toStartOf="@+id/btSend"
                android:hint="@string/message_hint" />

            <Button
                android:id="@+id/btSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/send" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

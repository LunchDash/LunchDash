<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@color/neutralBackground"
    android:id="@+id/llInfoWindow">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 people waiting!"
            android:id="@+id/tvPeopleWaiting"
            android:textSize="15sp"
            android:textColor="@color/peopleWaiting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0.5 miles"
            android:id="@+id/tvDistance"
            android:textSize="15sp"
            android:paddingLeft="8dp"
            android:textColor="@color/primaryColor.Dark" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        tools:text="In-n-Out"
        android:id="@+id/tvRestName"
        android:textSize="15sp"
        android:layout_below="@+id/tvDistance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCategories"
        tools:text="Burgers, Fast Food"
        android:textSize="14sp"
        android:layout_below="@+id/tvRestName" />


</LinearLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lunchdash.lunchdash.activities.AcceptDeclineActivity">

    <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/swipeHitbox"
        android:layout_alignBottom="@+id/tvMessage"></View>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ivProfileImage"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:text="[Name] would like to go to lunch with you at [name of restaurant]!"
        android:id="@+id/tvMessage"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ivProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:text="Interests: Space Travel, Electric Cars, Iron Man"
        android:id="@+id/tvInfo"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tvMessage"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:gravity="center_horizontal" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibLeftArrow"
        android:src="@drawable/dotted_left_arrow"
        android:layout_alignTop="@+id/ibRightArrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ivProfileImage"
        android:layout_toStartOf="@+id/ivProfileImage" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibRightArrow"
        android:src="@drawable/dotted_right_arrow"
        android:layout_alignTop="@+id/ivProfileImage"
        android:layout_alignRight="@+id/swipeHitbox"
        android:layout_alignEnd="@+id/swipeHitbox"
        android:layout_marginTop="61dp"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage" />

</RelativeLayout>

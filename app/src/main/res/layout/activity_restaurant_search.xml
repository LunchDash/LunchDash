<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:background="#3B5998">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ib_filter"
            android:src="@drawable/ic_filter"
            android:layout_weight="0.15"
            android:onClick="onFilterClick"
            android:background="#3B5998"
            android:scaleType="fitXY" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/etRestaurantSearch"
            android:hint="@string/hint_restaurant_search"
            android:layout_weight="0.7"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:inputType="text" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ib_maps"
            android:src="@android:drawable/ic_dialog_map"
            android:layout_weight="0.15"
            android:onClick="onMapButtonClick"
            android:background="#3B5998"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/ib_search"
            android:src="@android:drawable/ic_menu_search"
            android:layout_weight="0.15"
            android:onClick="onRestaurantSearch"
            android:background="#3B5998"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_height="50dp"
            android:layout_width="match_parent"
            style="@style/RectangleButton"
            android:text="Finished Picking Restaurants >>>"
            android:textSize="18sp"
            android:id="@+id/btnFinished"
            android:onClick="onFinishedClick"
            android:layout_alignTop="@+id/etSelected"
            android:layout_toRightOf="@+id/etSelected"
            android:layout_toEndOf="@+id/etSelected"
            android:visibility="invisible" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayoutRestaurant"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ll"></FrameLayout>

</RelativeLayout>
